	<script>
		var buybox = buybox || {};

		(function($, buybox) {

			$(function() {

				// init lang selector
//buybox.LangSelector('.lang-selector', 'en_UK');

// init alert box
var alertbox = new buybox.AlertBox();
alertbox.init();

// init user notifications displayer
buybox.Notifications('[]');		

// init newsletter form checking	
var newsletterChecker = new buybox.FormChecker({
    nokMsg: {
		mail: "Email address invalid",
		mandatory: "Highlighted fields have not been filled in correctly"
    }
});
newsletterChecker.init($('#newsletter-form'));						
				
				// init each slideshows
				var slideshows = [];
				$('.slideshow').each(function() {
					slideshows.push(new buybox.SimpleSlideshow({
						autoSlideDelay: $(this).hasClass('customers-testimonials') ? 10000 : 5000,
						wrapper: $(this)
					}));
				});	

				// init subscribe form checking
				var subscribeChecker = new buybox.FormChecker({
					nokMsg: {
						url: "URL format invalid",
						mail: "Email address invalid",
						mandatory: "Highlighted fields have not been filled in correctly"
					}
				});
				subscribeChecker.init($('#subscribe'));

				// listen document events
				$(document).on({
					'viewportResized': function() {
						$.each(slideshows, function(index, slideshow) {
							slideshow.init();
						});
					},
					'formValid': function(event) {
						//
					},
					'formInvalid': function(event) {
						$(document).trigger({
							type: 'alert',
							message: event.message
						});
					}
				});

				// init responsive handler
				buybox.Responsive({
					menuButtons: $('.mobile-menu-btn')
				});

			});

		})(jQuery, buybox);
